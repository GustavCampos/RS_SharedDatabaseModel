{% extends "components/html.jinja" %}
{% import "components/macros/form.jinja" as f %}

{% block content %}
<main class="container">
    <div class="columns is-centered">
        <div class="column is-half">
            <div class="box">
                <div class="level">
                    <div class="level-left">
                        <h1 class="title">CLIENT INFO: {{ client["id"] }}</h1>
                    </div>
                </div>

                <div class="columns">
                    <div class="column">
                        <div class="field">
                            <label class="label">Complete Name</label>
                            <div class="control">
                                <p>{{ client["completeName"] }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="column">
                        <div class="field">
                            <label class="label">CPF</label>
                            <div class="control">
                                <p>{{ client["cpf"] }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box">
            </div>
        </div>
    </div>
</main>
{% endblock content %}